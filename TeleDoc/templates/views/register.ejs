<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>TELEDOC</title>
  </head>
  <body>
    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                  <div class="col-md-6 col-lg-5 d-none d-md-block">
                    <img src="https://img.freepik.com/premium-vector/set-two-illustrations-doctor-conducts-online-consultation-topic-telemedicine_667176-137.jpg?w=2000"
                      alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                  </div>
                  <div class="col-md-6 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">
      
                      <form action="/register" method="post">
      
                        <div class="d-flex align-items-center mb-3 pb-1">
                          <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219"></i>
                          <span class="h1 fw-bold mb-0">teleDOC</span>
                        </div>
      
                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Get your account</h5>
      
                        <div class="form-outline mb-2">
                            <input type="Name" name = "name"id="name" class="form-control form-control-lg" placeholder="Name" required autofocus/>
                            <label class="form-label"></label>
                        </div>
                        <div class="form-outline mb-2">
                          <input type="date" name = "date_of_birth"id="date_of_birth" class="form-control form-control-lg" placeholder="date_of_birth" required autofocus/>
                          <label class="form-label"></label>
                      </div>
                        <div class="form-outline mb-2">
                          <input type="phonenumber" name ="phonenumber"id="phonenumber" class="form-control form-control-lg" placeholder="PhoneNumber" required autofocus/>
                          <label class="form-label" ></label>
                      </div>
                      <div class="form-outline mb-2">
                        <input type="email" name = "email"id="email address" class="form-control form-control-lg" placeholder="Email Address or User ID" required autofocus/>
                        <label class="form-label">
                        </label>
                      </div>
                      <div class="form-outline mb-2">
                        <input type="gender" name = "gender"id="gender" class="form-control form-control-lg" placeholder=" gender" required autofocus/>
                        <label class="form-label">
                        </label>
                      </div>
                        <div class="form-outline mb-2">
                          <input type="username" name = "user"id="user" class="form-control form-control-lg" placeholder=" UserName" required autofocus/>
                          <label class="form-label">
                          </label>
                        </div>
                        
                        <div class="form-outline mb-3">
                            <input type="location" name ="location" id="location" class="form-control form-control-lg" placeholder="location" required autofocus/>
                            <label class="form-label">
                            </label>
                        </div>
                       
                        <div class="form-outline mb-3">
                          <input type="password" name = "dpassword" id="password" class="form-control form-control-lg" placeholder=" Password" required autofocus/>
                          <label class="form-label"></label>
                        </div>
                        <div class="form-outline mb-3">
                            <input type="password" name = "password"id="password" class="form-control form-control-lg" placeholder=" Confirm Password" required autofocus/>
                            <label class="form-label" ></label>
                          </div>
      
                        <div class="pt-1 mb-3">
                          <button class="btn btn-dark btn-lg btn-block" type="submit">SignUp</button>
                        </div>
                        <a href="#!" class="small text-muted">Terms of use.</a>
                        <a href="#!" class="small text-muted">Privacy policy</a>
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
  </body>
</html>